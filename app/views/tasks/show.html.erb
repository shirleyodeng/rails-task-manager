<div class="container">
  <h1><%= @task.title%></h1>
  <h3><%= @task.details %></h3>

  <% if @task.completed == true %>
    <p><input type="checkbox" checked>This task is completed</p>
  <% else %>
    <p><input type="checkbox" unchecked> This task is not yet completed</p>
  <% end %>

  <p><%= link_to "Edit this task", edit_task_path(@task) %></p>
  <p><%= link_to "Back to list", tasks_path %></p>
</div>
